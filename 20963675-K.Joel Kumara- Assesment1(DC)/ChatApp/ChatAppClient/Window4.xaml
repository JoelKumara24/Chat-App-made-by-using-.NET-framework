<Window x:Class="ChatAppClient.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppClient"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid>
        <Label Content="Create a Chat Room:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="ChatRoomNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,30,0,0" Text="Enter chat room name"/>
        <Button Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="220,30,0,0" Click="CreateChatRoomButton_Click"/>
        <TextBlock Text="Existing Chat Rooms:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <ListBox x:Name="ExistingChatRoomsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="100" Margin="10,90,0,0"/>
    </Grid>

    
</Window>
